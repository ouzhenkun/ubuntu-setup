set autoread
set nocompatible

set noswapfile
set backupdir=~/.vimbackup

set splitright
set splitbelow
set nospell

colorscheme molokai
"colorscheme ir_black

" Tab indent 2 for html
au FileType html setlocal ts=2 sts=2 sw=2

" AutoClose off
let g:autoclose_on = 0

" Remove inden guide highlight colors
let g:indent_guides_auto_colors = 0

" Ctrl-P config
let g:ctrlp_regexp = 0
set wildignore+=*eclipse*,*/tmp/*,*/node_modules/*,*.jar,*.zip,*.so,*.swp,*.class

" Window resize
nmap <C-up> <C-w>+
nmap <C-down> <C-w>-
nmap <C-left> <C-w><
nmap <C-right> <C-w>>

" Allow Ctrl-s for saving
nmap <C-s> :update<CR>
vmap <C-s> <C-c>:update<CR>
imap <C-s> <C-c>:update<CR>

" Tab Control, Alt 1-9 = :tabn 1-9
nmap 1 1gt
nmap 2 2gt
nmap 3 3gt
nmap 4 4gt
nmap 5 5gt
nmap 6 6gt
nmap 7 7gt
nmap 8 8gt
nmap 9 9gt
nmap 0 :tablast<CR>
nmap <C-t> :tabnew<CR>
nmap <C-q> :q<CR>

" TabLine Display, 1) file1.sh  2) file2.sh 1/2  3) file3.sh +  4) file4.sh
if exists("+showtabline")
    function MyTabLine()
        let s = ''
        let t = tabpagenr()
        let i = 1
        while i <= tabpagenr('$')
            let wincur = tabpagewinnr(i)
            let winlen = tabpagewinnr(i, '$')
            let buflist = tabpagebuflist(i)
            let bufnr = buflist[wincur - 1]
            let fname = fnamemodify(bufname(bufnr), ':p:t')
            if fname == ''
                let fname = '[æœªå‘½å]'
            endif
            " mouse click
            let s .= '%' . i . 'T'
            " tabline color
            let s .= (i == t ? '%#TabLineSel#' : '%#TabLine#')
            " tabline label
            let s .= ' ' . i . ') ' . fname . ' '
            if getbufvar(bufnr, "&modified")
                let s .= '+ '
            endif
            if getbufvar(bufnr, "&modifiable") == 0
                let s .= '- '
            endif
            if winlen > 1
                let s .= wincur . '/' . winlen . ' '
            endif
            let i = i + 1
        endwhile
        let s .= '%T%#TabLineFill#%='
        let s .= (tabpagenr('$') > 1 ? '%999XX' : 'X')
        return s
    endfunction
    "set stal=2
    set tabline=%!MyTabLine()
endif
